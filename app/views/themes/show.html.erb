<div class="container">
  <div class="card-content-show">
    <% if @theme.photos.attached? %>
      <% @theme.photos.each do |photo| %>
        <div class="card-image-show" style="background-image: url('<%= cl_image_path photo.key%>')"> </div>
      <% end %>
    <% else %>
        <img src="https://images.unsplash.com/photo-1464047736614-af63643285bf?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&auto=format&fit=crop&w=967&q=80" alt="pic" class="card-image-show-default">
    <% end %>



    <div class="card-info-show">
      <div class="name-description">
        <h2> <%= @theme.name.capitalize %></h2>
        <p><%= @theme.description %></p>
      </div>


      <% if current_user == @theme.user %>
        <div class="top-right-button">
          <%= link_to "Edit", edit_theme_path %>
          <%= link_to "Delete", theme_path(@theme, { redirect_to: themes_path }), method: :delete, data: { confirm: "Are you sure?"} %>
        </div>
      <% end %>

      <div class="price-address-email">
        <p id="price"><%= number_to_currency(@theme.price) %> /day</p>
        <p><%= @theme.address %></p>
        <p><%= @theme.user.email %></p>

  <div class="booking-form p-4">
    <%= simple_form_for [@theme, @booking] do |f| %>
      <%= f.input :starting_date, as: :string, required: false, input_html: {id: "start_date"} %>
      <%= f.input :ending_date, as: :string, required: false, input_html: {id: "end_date"} %>

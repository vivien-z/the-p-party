<div class="navbar navbar-expand-sm navbar-light navbar-lewagon flex-row">
  <div class="d-flex align-items-center">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "https://images.unsplash.com/photo-1526653054275-5a4f37ea1c64?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1400&q=80", class: "avatar" %>
      <% end %>
    <h5 id="navbar-title" class="mb-0">The P Party</h5>
  </div>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div id="search-navbar" >
    <% unless current_page?(root_path) %>
      <%= form_tag themes_path, method: :get, class: "d-flex justify-content-center" do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control mr-3 w-100",
            placeholder: "Find an amazing party theme"
          %>
          <%= submit_tag "Search", class: "btn btn-nav" %>
      <% end %>
    <% end %>
  </div>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "All themes", themes_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "+ theme", new_theme_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://i.pinimg.com/originals/9b/79/ea/9b79ea02462b6d1ee877b7295f54c433.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My profile", user_path(current_user), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
